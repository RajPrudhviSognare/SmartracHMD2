<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    android:background="#ffffff"
    tools:context="smartracgrohe.MessagesForAssociateActivity">

    <ListView
        android:id="@+id/messagesForAssociatesListViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="#d3d5d7"
        android:paddingTop="0dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:background="#ffffff"
        android:cacheColorHint="@android:color/transparent"
        android:padding="0dp"
        android:choiceMode="multipleChoice"/>
    <View
        android:id="@+id/customViewAttendanceApprovalID10001919"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:background="#d3d5d7"
        android:layout_below="@+id/messagesForAssociatesListViewID"
        android:alpha="0.8"
        />

    <TextView
        android:id="@+id/messagesForAssociatesNoDataTextViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Your Message Box is Empty!"
        android:visibility="gone"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:textColor="#ff0000"
        android:layout_gravity="center"
        android:gravity="center"/>



</RelativeLayout>
