<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ListView
        android:id="@+id/associatereportsTargetDetailsListViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="#d3d5d7"
        android:paddingTop="0dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:background="#ffffff"
        android:cacheColorHint="@android:color/transparent"
        android:padding="0dp"
        android:choiceMode="multipleChoice"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:background="#d3d5d7"
        android:alpha="0.8"
        />

    <TextView
        android:id="@+id/associatereportsTargetNoDataTextViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Target is set for you!"
        android:visibility="gone"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:textColor="#ff0000"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/attendanceApprovalNoDataTextViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Coming Soon! Under Development. \nThank You!"
        android:visibility="gone"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:textColor="#ff0000"
        android:layout_gravity="center"
        android:gravity="center"/>


</LinearLayout>