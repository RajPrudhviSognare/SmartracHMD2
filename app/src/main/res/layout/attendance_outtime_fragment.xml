<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollviewAttendance1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/attendance_back"
    tools:context="smartracgrohe.AttendanceOuttimeFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            >
            <ImageView
                android:id="@+id/attendancePageTakePicturePlusIconImageViewID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/takepicture_plusicon"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/attendancePageTextViewID11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a Picture"
                android:textStyle="normal"
                android:textSize="32sp"
                android:layout_below="@+id/attendancePageTakePicturePlusIconImageViewID1"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:textColor="#a7b6c8"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/attendancePageTextViewID22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a clear picture inside your work Place"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_below="@+id/attendancePageTextViewID11"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:textColor="#a7b6c8"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />

        <RelativeLayout
            android:id="@+id/attendancePagePhotoPreviewAreaLayoutID1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/attendancePageTextViewID22">
            <ImageView
                android:id="@+id/attendancePagePhotoPreviewAreaImageViewID1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/photo_preview_area"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/attendancePageReasonValueEditTextID1"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:lines="1"
                android:layout_below="@+id/attendancePagePhotoPreviewAreaLayoutID1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="15dp"
                android:maxLength="50"
                android:visibility="visible"
                android:gravity="start|center_vertical"
                android:hint="Write Comment..."
                android:textColorHint="#dddddd"
                android:theme="@style/MyEditTextTheme"
                android:background="@drawable/edittextfieldforsalestracking"
                android:textColor="#e1e1e1"
                android:textSize="14sp"
                android:textStyle="normal"
                />

            <!--<ImageView
                android:id="@+id/attendancePageSubmitImageViewID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submitbtn"
                android:layout_gravity="center"
                android:layout_below="@+id/attendancePagePhotoPreviewAreaImageViewID1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"/>-->


        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/attendancePageSubmitImageViewID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submitbtn"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>