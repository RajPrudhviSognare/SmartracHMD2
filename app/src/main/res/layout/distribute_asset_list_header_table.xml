<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="#cccccc"
    android:weightSum="3"
    android:layout_margin="0dp"
    android:id="@+id/listview_header_distribute_asset_for_table_LinearLayoutID"
    android:visibility="visible"
    android:layout_below="@+id/DistributeAssetSelectAssociateLayoutID">

    <TextView
        android:id="@+id/listviewHeader_distribute_asset_NameTagTextViewID1001"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="normal|bold"
        android:textSize="13sp"
        android:textColor="#1a237e"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <View
        android:id="@+id/customViewdistribute_assetID1000199991"
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:background="#a1a1a1"
        android:alpha="0.8"
        />
    <TextView
        android:id="@+id/listviewHeader_distribute_asset_ASSIGN_TagTextViewID1001"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Assign"
        android:textStyle="normal|bold"
        android:textSize="13sp"
        android:textColor="#1a237e"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <View
        android:id="@+id/customViewASSIGNID100019999091"
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:background="#a1a1a1"
        android:alpha="0.8"
        />
    <TextView
        android:id="@+id/listviewHeader_distribute_asset_STOCK_TagTextViewID1001"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Stock"
        android:textStyle="normal|bold"
        android:textSize="13sp"
        android:textColor="#1a237e"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"/>

</LinearLayout>