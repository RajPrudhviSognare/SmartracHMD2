    <LinearLayout
        android:id="@+id/lyt_spinners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <Spinner
            android:id="@+id/associateSpinnerID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/backdropdownfieldblack"
            android:drawSelectorOnTop="true"
            android:prompt="@string/spinner_title7" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#d3d5d7" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/normalleave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Date:"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="datetime"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="15dp"
            android:maxLength="50"
            android:visibility="visible"
            android:gravity="start|center_vertical"
            android:hint="Select Date"
            android:textColorHint="#615D5D"
            android:focusable="false"
            android:theme="@style/MyEditTextTheme"
            android:id="@+id/attendancepagefromdateEditTextID1"
            android:background="@drawable/edittextfieldforsalestracking"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            /> <!--android:background="@drawable/edittextfieldback"-->





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Date:"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="datetime"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="15dp"
            android:maxLength="50"
            android:visibility="visible"
            android:gravity="start|center_vertical"
            android:hint="Select Date"
            android:textColorHint="#615D5D"
            android:focusable="false"
            android:theme="@style/MyEditTextTheme"
            android:id="@+id/attendancepagetodateEditTextID1"
            android:background="@drawable/edittextfieldforsalestracking"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            /> <!--android:background="@drawable/edittextfieldback"-->



    </LinearLayout>
    <ImageView
        android:id="@+id/attendancePageSubmitImageViewID3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submitbtn"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"/>



    <ListView
        android:id="@+id/associatereportsAttendanceDetailsListViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="#d3d5d7"
        android:paddingTop="0dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:background="#ffffff"
        android:cacheColorHint="@android:color/transparent"
        android:padding="0dp"
        android:choiceMode="multipleChoice"
        android:visibility="gone"
        />

    <View
        android:id="@+id/viewTypeViewAssociatereportsID1002"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:background="#d3d5d7"
        android:alpha="0.8"/>

    <!--<TextView
        android:id="@+id/associatereportsNoDataTextViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Record Found!"
        android:visibility="gone"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:textColor="#ff0000"
        android:layout_gravity="center"
        android:gravity="center"/>-->

    <View
        android:id="@+id/viewTypeViewAssociatereportsID10023"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#d3d5d7"
        android:alpha="0.8"
        android:visibility="gone"/>

    <include layout="@layout/listview_header_associate_monthly_attendance_table"/>

    <ListView
        android:id="@+id/associatereportsAttendanceDetailsListViewID1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="#d3d5d7"
        android:paddingTop="0dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:background="#ffffff"
        android:cacheColorHint="@android:color/transparent"
        android:padding="0dp"
        android:choiceMode="multipleChoice"
        android:visibility="gone"/>

    <View
        android:id="@+id/viewTypeViewAssociatereportsID10024"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:background="#d3d5d7"
        android:alpha="0.8"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/associatereportsNoDataTextViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Record Found!"
        android:visibility="gone"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:textColor="#ff0000"
        android:layout_gravity="center"
        android:gravity="center"/>



</LinearLayout>