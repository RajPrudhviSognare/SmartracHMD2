<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ForgotPasswordActivity">

    <include layout="@layout/forgot_password_topbar_title"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">

        <EditText
            android:id="@+id/forgotPasswordPageISDEditTextID"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:inputType="text"
            android:lines="1"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:drawablePadding="15dp"
            android:maxLength="500"
            android:visibility="visible"
            android:gravity="start|center_vertical"
            android:hint="Enter ISD Code"
            android:textColorHint="#a1a1a1"
            android:theme="@style/MyEditTextTheme"
            android:background="@drawable/login_custom_edittext_back"
            android:textColor="#e3e3e3"
            android:textStyle="normal|italic"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/forgotPasswordPageEmailEditTextID"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:drawablePadding="15dp"
            android:maxLength="500"
            android:visibility="visible"
            android:gravity="start|center_vertical"
            android:hint="Enter Registered Email id"
            android:textColorHint="#a1a1a1"
            android:theme="@style/MyEditTextTheme"
            android:background="@drawable/login_custom_edittext_back"
            android:textColor="#e3e3e3"
            android:textStyle="normal|italic"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/forgotPasswordSubmitBtnID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/login_custom_button_back"
            android:text="Submit"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textStyle="normal|bold"
            />


    </LinearLayout>




</RelativeLayout>